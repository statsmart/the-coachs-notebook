import React, { useState } from 'react';
import { format } from 'date-fns';
import { motion } from 'framer-motion';
import { 
  FileText, Image as ImageIcon, Video, File, Star,
  MoreVertical, Trash2, Pin, Eye, EyeOff, Download
} from 'lucide-react';
import { Avatar, AvatarFallback, AvatarImage } from "@/components/ui/avatar";
import { Badge } from "@/components/ui/badge";
import { Button } from "@/components/ui/button";
import {
  DropdownMenu,
  DropdownMenuContent,
  DropdownMenuItem,
  DropdownMenuSeparator,
  DropdownMenuTrigger,
} from "@/components/ui/dropdown-menu";
import { cn } from "@/lib/utils";

export default function TimelineEntryCard({ entry, currentUserId, onDelete, onPin, onTogglePrivate }) {
  const [imageLoaded, setImageLoaded] = useState(false);
  const isOwner = entry.author_id === currentUserId;

  const getEntryIcon = () => {
    switch (entry.entry_type) {
      case 'image': return ImageIcon;
      case 'video': return Video;
      case 'file': return File;
      case 'milestone': return Star;
      default: return FileText;
    }
  };

  const EntryIcon = getEntryIcon();

  const renderMedia = () => {
    if (!entry.media_url) return null;

    switch (entry.entry_type) {
      case 'image':
        return (
          <div className="mt-4 rounded-xl overflow-hidden bg-slate-100">
            {!imageLoaded && (
              <div className="w-full h-48 animate-pulse bg-slate-200" />
            )}
            <img
              src={entry.media_url}
              alt={entry.title || 'Timeline image'}
              className={cn(
                "w-full max-h-96 object-cover transition-opacity",
                imageLoaded ? "opacity-100" : "opacity-0"
              )}
              onLoad={() => setImageLoaded(true)}
            />
          </div>
        );
      case 'video':
        return (
          <div className="mt-4 rounded-xl overflow-hidden bg-slate-900">
            <video
              src={entry.media_url}
              controls
              className="w-full max-h-96"
            />
          </div>
        );
      case 'file':
        return (
          <a
            href={entry.media_url}
            target="_blank"
            rel="noopener noreferrer"
            className="mt-4 flex items-center gap-3 p-4 bg-slate-50 rounded-xl hover:bg-slate-100 transition-colors"
          >
            <div className="w-10 h-10 rounded-lg bg-slate-200 flex items-center justify-center">
              <File className="w-5 h-5 text-slate-600" />
            </div>
            <div className="flex-1 min-w-0">
              <p className="font-medium text-slate-900 truncate">{entry.media_name || 'Attached File'}</p>
              <p className="text-sm text-slate-500">Click to download</p>
            </div>
            <Download className="w-5 h-5 text-slate-400" />
          </a>
        );
      default:
        return null;
    }
  };

  return (
    <motion.div
      initial={{ opacity: 0, y: 20 }}
      animate={{ opacity: 1, y: 0 }}
      className={cn(
        "relative pl-8 pb-8 border-l-2 border-slate-200 last:border-transparent last:pb-0",
        entry.is_pinned && "border-l-emerald-300"
      )}
    >
      {/* Timeline Node */}
      <div className={cn(
        "absolute left-0 transform -translate-x-1/2 w-4 h-4 rounded-full border-2 bg-white",
        entry.is_pinned ? "border-emerald-500" : "border-slate-300"
      )}>
        {entry.entry_type === 'milestone' && (
          <div className="absolute inset-0 bg-amber-400 rounded-full animate-pulse" />
        )}
      </div>

      {/* Entry Card */}
      <div className={cn(
        "ml-4 bg-white rounded-2xl border shadow-sm overflow-hidden",
        entry.is_pinned && "border-emerald-200 bg-emerald-50/30",
        entry.is_private && "border-dashed"
      )}>
        {/* Header */}
        <div className="p-4 flex items-start justify-between">
          <div className="flex items-center gap-3">
            <Avatar className="w-10 h-10">
              <AvatarImage src={entry.author_avatar} />
              <AvatarFallback className={cn(
                entry.author_role === 'coach' ? "bg-blue-100 text-blue-700" : "bg-emerald-100 text-emerald-700"
              )}>
                {entry.author_name?.charAt(0)}
              </AvatarFallback>
            </Avatar>
            <div>
              <div className="flex items-center gap-2">
                <span className="font-medium text-slate-900">{entry.author_name}</span>
                <Badge variant="secondary" className="text-xs capitalize">
                  {entry.author_role}
                </Badge>
              </div>
              <p className="text-xs text-slate-500">
                {format(new Date(entry.created_date), 'MMM d, yyyy â€¢ h:mm a')}
              </p>
            </div>
          </div>

          <div className="flex items-center gap-2">
            {entry.is_pinned && (
              <Pin className="w-4 h-4 text-emerald-500" />
            )}
            {entry.is_private && (
              <EyeOff className="w-4 h-4 text-slate-400" />
            )}
            <Badge 
              variant="outline" 
              className="flex items-center gap-1 text-xs"
            >
              <EntryIcon className="w-3 h-3" />
              {entry.entry_type}
            </Badge>

            {isOwner && (
              <DropdownMenu>
                <DropdownMenuTrigger asChild>
                  <Button variant="ghost" size="icon" className="h-8 w-8">
                    <MoreVertical className="w-4 h-4" />
                  </Button>
                </DropdownMenuTrigger>
                <DropdownMenuContent align="end">
                  <DropdownMenuItem onClick={() => onPin(entry)}>
                    <Pin className="w-4 h-4 mr-2" />
                    {entry.is_pinned ? 'Unpin' : 'Pin to top'}
                  </DropdownMenuItem>
                  <DropdownMenuItem onClick={() => onTogglePrivate(entry)}>
                    {entry.is_private ? (
                      <>
                        <Eye className="w-4 h-4 mr-2" />
                        Make visible
                      </>
                    ) : (
                      <>
                        <EyeOff className="w-4 h-4 mr-2" />
                        Make private
                      </>
                    )}
                  </DropdownMenuItem>
                  <DropdownMenuSeparator />
                  <DropdownMenuItem 
                    onClick={() => onDelete(entry)}
                    className="text-red-600"
                  >
                    <Trash2 className="w-4 h-4 mr-2" />
                    Delete
                  </DropdownMenuItem>
                </DropdownMenuContent>
              </DropdownMenu>
            )}
          </div>
        </div>

        {/* Content */}
        <div className="px-4 pb-4">
          {entry.title && (
            <h3 className="font-semibold text-slate-900 text-lg mb-2">
              {entry.title}
            </h3>
          )}
          {entry.content && (
            <p className="text-slate-600 whitespace-pre-wrap">{entry.content}</p>
          )}
          {renderMedia()}

          {/* Tags */}
          {entry.tags && entry.tags.length > 0 && (
            <div className="flex flex-wrap gap-2 mt-4">
              {entry.tags.map((tag) => (
                <Badge key={tag} variant="secondary" className="text-xs">
                  #{tag}
                </Badge>
              ))}
            </div>
          )}
        </div>
      </div>
    </motion.div>
  );
}